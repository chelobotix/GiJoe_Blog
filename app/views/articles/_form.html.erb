<% if @article.errors.any?  %>
  <div class="bg-red-300 w-10/12 p-5">
    <p class="text-red-800">The following errors prevented the article being saved</p>
    <ul class="list-disc pl-10 text-red-700">
      <% @article.errors.full_messages.each do |message|  %>
        <li><%= message %></li>
      <% end  %>
    </ul>
  </div>
<% end  %>

<div class="flex justify-center w-10/12">
  <%= form_with model: @article, class: "w-10/12 flex flex-col items-center gap-3" do |f|%>
    <div class="flex justify-center">
      <%= f.label :title, class: 'w-40' %>
      <%= f.text_field :title, class: 'w-40' %>
    </div>

    <div class="flex justify-center">
      <%= f.label :description, class: 'w-40' %>
      <%= f.text_area :description, class: 'w-40' %>
    </div>

    <div class="flex justify-center">
      <%= f.submit class: 'px-5 py-3 bg-blue-600 text-white rounded-lg border-[1px] border-white' %>
    </div>
  <%end%>
</div>
