<section class="flex flex-col items-center gap-5 py-5">
  <h2 class="text-indigo-600 text-4xl">Log in</h2>

  <div class="flex justify-center items-center w-10/12">
    <%= form_with scope: :session, url: login_path, class: "w-10/12 flex flex-col items-center gap-3", local: true do |f|%>
      <div class="flex justify-center items-center">
        <%= f.label :email, class: 'w-40' %>
        <%= f.email_field :email, placeholder: 'Enter your email', required: true, class: 'w-50' %>
      </div>

      <div class="flex justify-center items-center">
        <%= f.label :password, class: 'w-40' %>
        <%= f.password_field :password, placeholder: 'Enter your password', required: true, class: 'w-50' %>
      </div>

      <div class="flex justify-center items-center">
        <%= f.submit 'Log in', class: 'px-5 py-3 bg-blue-600 text-white rounded-lg border-[1px] border-white' %>
      </div>
    <%end%>
  </div>
</section>
