<%= render 'shared/errors', obj: @category %>

<div class="flex justify-center items-center w-full py-4">
  <%= form_with model: @category, data: { turbo: false }, class: "w-10/12 flex flex-col items-center gap-6" do |f|%>
    <%= f.text_field :name, placeholder: 'Name', class: 'w-40 border-[1px] border-blue-500 rounded-lg p-1' %>

    <%= f.submit(class: 'px-5 py-2 bg-blue-600 text-white rounded-lg border-[1px] border-white') %>
  <%end%>
</div>
