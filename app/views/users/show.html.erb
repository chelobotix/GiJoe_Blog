<section class="flex flex-col items-center gap-5 py-5">
  <h2 class="text-indigo-600 text-4xl">User Profile</h2>

  <%= image_tag(gravatar(@user, 200), alt: @user.username, class: 'rounded-md') %>
  <p>Username: <%= @user.username %></p>
  <p>Email: <%= @user.email %></p>
  <% if logged_in? && current_user == @user %>
    <p>
      <%=
        link_to 'Edit Profile',
                edit_user_path(@user),
                class: 'text-blue-500 border-[1px] border-blue-500 p-2 rounded-lg'
      %>
    </p>
    <p>
      <%=
        link_to 'Delete Profile',
                user_path(@user),
                data: {
                  turbo_method: :delete,
                  turbo_confirm: 'Are you sure?',
                },
                class: 'text-red-500 border-[1px] border-red-500 p-2 rounded-lg'
      %>
    </p>
  <% end %>

  <h2 class="text-indigo-600 text-4xl">Articles</h2>
  <%= render 'articles/article' %>

  <div class="flickr_pagination">
    <%= will_paginate @articles, container: false %>
  </div>
</section>
